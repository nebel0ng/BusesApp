<Window x:Class="BusesApp.Design.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusesApp.Design"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Border MinWidth="200" MinHeight="50" Background="White" CornerRadius="20" VerticalAlignment="Center" >
            <StackPanel >
                <Button Content="Автобусы"   Click="Button_Click_Buses" Margin="5" Cursor="Hand"/>
                <Button Content="Локации"  Click="Button_Click_Locations" Margin="5" Cursor="Hand"/>
                <Button Content="Клиенты"  Click="Button_Click_Clients" Margin="5" Cursor="Hand"/>
                <Button Content="Сотрудники"  Click="Button_Click_Employees" Margin="5" Cursor="Hand"/>
                <Button Content="Направления" Click="Button_Click_Routes" Margin="5" Cursor="Hand"/>
                <Button Content="Туры"  Click="Button_Click_Tours" Margin="5" Cursor="Hand"/>
                <Button Content="Покупка тура"  Click="Button_Click_Buy" Margin="5" Cursor="Hand"/>
                <Button Content="Сотрудники в турах"  Click="Button_Click_EmpTour" Margin="5" Cursor="Hand"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
